      if (enabled) {
        document.querySelectorAll(".horse").forEach(div => {
          div.addEventListener("click", async () => {
            if (localStorage.getItem("votedHorse")) return; // äºŒé‡æŠ•ç¥¨é˜²æ­¢
            const horse = div.dataset.name;
            localStorage.setItem("votedHorse", horse);
            // æŠ•ç¥¨è¨˜éŒ²ï¼ˆtimestamp ã‚’ã¤ã‘ã‚‹ï¼‰
            await push(ref(db, "votes"), { horse, ts: Date.now() });
            messageDiv.textContent = `ã€Œ${horse}ã€ã«æŠ•ç¥¨ã—ã¾ã—ãŸï¼`;
            showButtons(false);
          });
        });
      }
    }

    function showButtons(enable) {
      if (enable) renderHorseButtons(true);
      else {
        // ãƒœã‚¿ãƒ³ã‚’ç„¡åŠ¹åŒ–è¡¨ç¤º
        horsesDiv.innerHTML = horses.map(h => `<div class="horse disabled" data-name="${h}">${h}</div>`).join("");
